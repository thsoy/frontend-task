{
  "extends": "typescript-config/nextjs.json",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "jsx": "react",
  "moduleResolution": "node",
  "module": "esnext",
  "target": "es5",
  "lib": ["dom", "esnext"],
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
